@model IEnumerable< BookStore.Models.Book>

@{
	ViewData["Title"] = "Store";
}

<h2 class="my-4">Store</h2>

<form asp-action="Index" class="col-2 my-1 p-2">
	<div>
		Filter Search
		<div class="my-1">
			<input type="text" name="searchString" placeholder="Title or Author" class="form-control-sm col-12" />
		</div>
		<div class="my-1">
			<input type="number" name="minPrice" step="1" placeholder="$min" class="form-control-sm col-5" />&nbsp;&#8212;&nbsp;<input type="number" name="maxPrice" step="1" placeholder="$max" class="form-control-sm col-5" />&nbsp;&#8212;&nbsp;
		</div>
		<input type="submit" value="Filter" class="btn btn-primary" />
		<a asp-action="Index" class="btn btn-secondary float-right"> Clear</a>
	</div>
</form>

<div class="row">
	@foreach(var book in Model)
	{
		<div class="col-3">
			<div class="card my-2 store-card wrapper">
				<a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@book.Id">

						<img src="@book.imageUrl" class="card-img-top card-img-custom img-wrapper" /> 
						<div class="book-genre">@book.Genre</div>
				</a>

					<div class="card-body" style="height: 6em">
						<h5 class="mb-3">@book.Title</h5>
					</div>
					<div class="card-body">
						<span class="card-text">@book.Price.ToString("c")</span>
						<a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-edit float-right store-btn"><i class="fa-brands fa-opencart"></i></a>
					</div>
			</div>
		</div>
	}
</div>